<odoo>

    <!-- Form View -->
    <record id="view_estate_property_form" model="ir.ui.view">
        <field name="name">estate.property.form</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <form string="Real Estate">
                <header>
                    <button name="action_sold" type="object" string="Sold" class="btn-primary" />
                    <button name="action_cancel" type="object" string="Cancel" class="btn-secondary" />
                </header>
                <sheet>
                    <!-- Title Section -->
                    <div class="oe_title">
                        <h1>
                            <field name="name"/>
                        </h1>
                        <h4>
                            <field name="tag_ids" widget="many2many_tags"/>
                        </h4>
                    </div>
                    
                    <!-- General Information -->
                    <group>
                        <group>
                            <field name="property_type_id"/>
                            <field name="postcode"/>
                            <field name="date_availability"/>
                            
                        </group>
                        <group>
                            <field name="expected_price"/>
                            <field name="best_price"/>
                            <field name="selling_price"/>
                        </group>
                    </group>

                    <!-- Description and Details Notebook -->
                    <notebook>
                        <page string="Estate Property">
                            <group>
                                <group>
                                    <field name="bedrooms"/>
                                    <field name="living_area"/>
                                    <field name="facades"/>
                                    <field name="garage"/>
                                    <field name="garden"/>
                                    <field name="garden_area"/>
                                    <field name="garden_orientation"/>
                                    <field name="total_area"/>
                                </group>
                            </group>
                        </page>

                        <!-- Buyer & Salesperson Tab -->
                        <page string="Buyer and Salesperson">
                            <group>
                                <group>
                                    <field name="buyer_id"/>
                                    <field name="salesperson_id"/>
                                </group>
                            </group>
                        </page>


                        <!-- Offers Tab -->
                        <page string="Offers">
                            <field name="offer_ids">
                                <tree string="Estate Property Offers">
                                    <field name="price"/>
                                    <field name="validity"/>
                                    <field name="date_deadline"/>
                                    <field name="partner_id"/>
                                    <button name="action_accept" type="object" string="Accept" class="btn-primary " />
                                    <button name="action_refuse" type="object" string="Refuse" class="btn-secondary "/>
                                    <field name="state"/>
                                </tree>
                                <form string="Estate Property Offer">
                                    <sheet>
                                        <group>
                                            <field name="price"/>
                                            <field name="validity"/>
                                            <field name="date_deadline"/>
                                            <field name="partner_id"/>
                                            <!-- <field name="state"/>  -->
                                        </group>
                                    </sheet>
                                </form>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Tree View -->
    <record id="view_estate_property_tree" model="ir.ui.view">
        <field name="name">estate.property.tree</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <tree string="Estate Properties">
                <field name="name"/>
                <field name="property_type_id"/>
                <field name="postcode"/>
                <field name="tag_names" string="Tags"/>
                <field name="bedrooms"/>
                <field name="living_area"/>
                <field name="expected_price"/>
                <field name="selling_price"/>
                <field name="state"/>
            </tree>
        </field>
    </record>
    <record id="view_estate_property_kanban" model="ir.ui.view">
        <field name="name">estate.property.kanban</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <kanban 
                default_order="date_availability desc"
                create="true"
                edit="true"
                delete="true"
                group_create="true"
                group_delete="true"
                group_edit="true"
                groups_draggable="true"
                records_draggable="true"
                archivable="true"
                quick_create="true"
                on_create="quick_create"
                sample="false">
                
                <!-- Define fields to be used in templates -->
                <field name="name"/>
                <field name="state"/>
                <field name="date_availability"/>
                
                <!-- Define header with buttons -->
                <header>
                    <button name="action_create" type="object" string="Create New" display="always"/>
                    <button name="action_archive" type="object" string="Archive" display="always"/>
                </header>

                <!-- Define progress bar -->
                <progressbar field="state"
                             colors="{'new': 'success', 'sold': 'warning', 'cancelled': 'danger'}"
                             sum_field="amount"/>

                <!-- Define templates -->
                <templates>
                    <t t-name="kanban-box">
                        <div class="o_kanban_record">
                            <div class="o_kanban_record_body">
                                <field name="name"/>
                                <field name="state"/>
                                <field name="date_availability"/>
                            </div>
                            <div class="o_kanban_record_footer">
                                <button name="action_sold" type="object" string="Mark as Sold"/>
                                <button name="action_cancel" type="object" string="Cancel"/>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>        
        </field>
    </record>
    <!-- Search View -->
    <record id="view_estate_property_search" model="ir.ui.view">
        <field name="name">estate.property.search</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <search string="Estate Property Search">
                <filter name="filter_new_or_offer" string="Available Properties" domain="[('state', 'in', ['new', 'offer_received'])]"/>
                <filter name="filter_all" string="All" domain="[]"/>
                <field name="name"/>
                <field name="postcode"/>
                <field name="state"/>
                <field name="property_type_id"/>
                <group name="group_by_postcode" string="Group By Postcode"/>
            </search>
        </field>
    </record>

    <record id="view_users_form_inherit" model="ir.ui.view">
        <field name="name">res.users.form.inherit</field>
        <field name="model">res.users</field>
        <field name="inherit_id" ref="base.view_users_form"/>
        <field name="arch" type="xml">
            <xpath expr="//page[@name='preferences']" position="after">
                <page string="Properties">
                    <field name="property_ids" context="{'default_salesperson_id': active_id}">
                        <tree>
                            <field name="name"/>
                            <field name="property_type_id"/>
                            <field name="postcode"/>
                            <field name="expected_price"/>
                            <field name="state"/>
                        </tree>
                    </field>
                </page>
            </xpath>
        </field>
    </record>

    <record id="estate_property_action" model="ir.actions.act_window">
        <field name="name">Properties</field>
        <field name="res_model">estate.property</field>
        <field name="view_mode">kanban,tree,form</field>
        <field name="view_id" ref="view_estate_property_kanban"/>
    </record>
</odoo>
